---
import OptionItem, { type OptionItem as OptionItemType } from "./option-item.astro";

type Props = {
    items?: Array<OptionItemType>;
    class?: string;
};

const { items, class: className } = Astro.props;
---

<ul
    class:list={[
        "absolute top-full right-0 left-0 hidden max-h-32 overflow-hidden overflow-y-auto rounded-b-md bg-neutral-200 pt-2",
        className,
    ]}
>
    <slot>
        {
            items?.map((item) => {
                return <OptionItem item={item} />;
            })
        }
    </slot>
</ul>
