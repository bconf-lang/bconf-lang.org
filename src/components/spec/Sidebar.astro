---
import type { MarkdownHeading } from "astro";
// import SpecSwitcher from "./SpecSwitcher.astro";
import TableOfContents from "./TableOfContents.astro";
import { buildHeadingTree } from "@utils/markdown";

type Props = {
    headings: MarkdownHeading[];
};

const { headings } = Astro.props;
---

<aside
    id="toc-nav"
    class="fixed top-(--mobile-header-height) right-0 left-0 z-40 hidden max-h-[calc(100vh-var(--mobile-header-height))] overflow-y-auto border-r border-neutral-400 bg-inherit p-4 md:sticky md:top-(--header-height) md:block md:max-h-[calc(100vh-var(--header-height))]"
>
    <!-- <SpecSwitcher /> -->
    <TableOfContents headings={buildHeadingTree(headings, { skipDepthOne: true })} />
</aside>
