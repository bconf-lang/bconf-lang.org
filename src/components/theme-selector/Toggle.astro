---
type Props = {
    theme: string;
    description: string;
};

const { theme, description } = Astro.props;
---

<button
    class="flex items-center gap-3 rounded-full p-2 text-neutral-800 group-data-collapsed:rounded-none group-data-collapsed:px-6 group-data-collapsed:py-4 hover:bg-neutral-300 data-active:bg-neutral-300"
    data-theme={theme}
>
    <slot />
    <p class="font-medium group-not-data-collapsed:hidden">{description}</p>
</button>
