---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button"> & {
    theme: string;
};

const { theme, class: className } = Astro.props;
---

<button
    data-theme={theme}
    class:list={["flex items-center gap-3 rounded-full p-2 text-neutral-800 hover:bg-neutral-300", className]}
>
    <slot />
</button>
